<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivRarity"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:paddingLeft="1dp" />

    <ImageView
        android:id="@+id/ivCost"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp" />

    <ImageView
        android:id="@+id/ivEnergy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp" />

    <ImageView
        android:id="@+id/ivAffilOne"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp" />

    <ImageView
        android:id="@+id/ivAffilTwo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="3dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btFoilOwned"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btFoilOwned"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/btCardOwned"
            android:background="@drawable/custom_foil_button"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btCardOwned"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:layout_marginRight="2.5dp"
            android:text="0"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>